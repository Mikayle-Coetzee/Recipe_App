<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MyButtonStyle" 
           TargetType="Button">

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">

                    <Border x:Name="myBorder" 
                            BorderThickness="2" 
                            CornerRadius="20" 
                            Background="Black">
                        <Border.BorderBrush>
                            <LinearGradientBrush 
                                EndPoint="0.5,1" 
                                StartPoint="0.5,0">
                                <GradientStop 
                                    Color="DarkRed" 
                                    Offset="0.4"/>
                                <GradientStop 
                                    Color="DarkSlateGray" 
                                    Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>

                        <ContentPresenter 
                            VerticalAlignment="Center" 
                            HorizontalAlignment="Center"/>

                        <Border.Effect>
                            <DropShadowEffect/>
                        </Border.Effect>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="Button.IsMouseOver" 
                                 Value="True">
                            <Setter Property="Background" 
                                    TargetName="myBorder" 
                                    Value="DarkSlateGray"/>
                        </Trigger>
                        <Trigger Property="Button.IsPressed" 
                                 Value="True">
                            <Setter Property="Background" 
                                    TargetName="myBorder" 
                                    Value="maroon"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
